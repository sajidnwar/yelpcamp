<% include ../partial/header %>

<div class="container" id="yelpcamp">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= camp.image%>">
                <div class="caption-full">
                    <span class="pull-right">$<%= camp.price %>/day</span>
                    <h4 class="text-left" style="color: black"><a href=""><%= camp.name %></a></h4>
                    <p><%= camp.description %></p>
                    <p>
                        <em>Submitted by:<%= camp.author.username%></em>
                    </p>
                    <% if(currentUser && camp.author.id.equals(currentUser.id)){%>
                    <a class="btn btn-xs btn-warning" href="/camp/<%= camp.id %>/edit">Edit</a>
                    <form id="delete-form" action="/camp/<%= camp.id %>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/camp/<%= camp.id %>/comments/new">Add Comment</a>
                </div>
                <hr>
                <% camp.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%=comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                    <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser.id)){%>
                            <a class="btn btn-xs btn-warning" href="/camp/<%= camp.id %>/comments/<%= comment.id %>/edit">Edit</a>
                            <form id="delete-form" action="/camp/<%= camp.id %>/comments/<%= comment.id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                            <% }%>
                        </div>
                    </div>
                <%})%>
            </div>
        </div>
    </div>
</div>






<% include ../partial/footer %>
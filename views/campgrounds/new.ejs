<% include ../partial/header%>
<div class="container">
            <div>
                <h1 style="text-align: center">To create a new CampGround</h1>
            </div>
            <div style="width:30%;margin: 20px auto;">
                    <form action="/camp" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="name" placeholder="name">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="image" placeholder="image url">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="description" placeholder="decscription">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01" autocomplete="off" required />
                          </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit!!</button>
                        </div>
                    </form>
                    <a href="/camp">Go Back</a>
            </div>

    
</div>

<% include ../partial/footer%>
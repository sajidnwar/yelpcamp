<% include ../partial/header%>
<div class="container">
            <div>
                <h1 style="text-align: center">Edit <%=camp.name%></h1>
            </div>
            <div style="width:30%;margin: 20px auto;">
                    <form action="/camp/<%= camp.id%>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="camp[image]" value="<%= camp.image %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="camp[description]" value="<%= camp.description %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="camp[price]" placeholder="9.99" min="0.01" step="0.01" autocomplete="off" required />
                          </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit!!</button>
                        </div>
                    </form>
                    <a href="/camp">Go Back</a>
            </div>

    
</div>

<% include ../partial/footer%> 